---
const { href, isActive } = Astro.props;

let className = "cursor-pointer active:bg-gray-100 hover:bg-gray-100 dark:active:bg-slate-600 dark:hover:bg-slate-600 rounded-2xl transition-colors flex align-middle"

if (isActive) {
    className += " underline underline-offset-4"
}


---

<div class={className}>
    <a href={href} class="p-4" >
        <slot/>
    </a>
</div>