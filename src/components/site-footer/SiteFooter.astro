---
import { Fa6BrandsLinkedin, Fa6BrandsSquareGithub, Fa6RegularEnvelope } from "@components/icons";
import Wrapper from "@components/SiteWrapper.astro";
import site from "@data/site.json";
import FooterLink from "./FooterLink.astro";
---

<footer class="text-lg dark:bg-black/10 bg-black/5 dark:text-slate-200 p-5">
    <Wrapper>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
            <div> 
                <ul>
                    <li>
                        <FooterLink href={"mailto:" + site.contact.email}><Fa6RegularEnvelope className="icon"/> {site.contact.email}</FooterLink>
                    </li>
                    <li>
                        <FooterLink href={site.contact.links.github}>
                            <Fa6BrandsSquareGithub className="icon"/> GitHub</FooterLink>
                    </li>
                    <li>
                        <FooterLink href={site.contact.links.linkedIn}>
                            <Fa6BrandsLinkedin className="icon"/> LinkedIn</FooterLink>
                    </li>
                </ul>
            </div>
            <div>
                <ul>
                    <li>{site.contact.name}</li>
                    <li>{site.contact.location}</li>
                </ul>
            </div>
            <div>
                <p>{site.description}</p>
            </div>
        </div>
        <div class="mt-7"> 
            <p>{site.copyright}</p>
        </div>
    </Wrapper>
</footer>